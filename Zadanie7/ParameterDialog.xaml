<Window x:Class="Zadanie7.ParameterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie7" WindowStartupLocation="CenterOwner"
        mc:Ignorable="d"
        Title="ParameterDialog" Height="150" Width="400">
    <StackPanel>

        <TextBlock Name="TitleTextBox" Margin="5">Podaj parametr R dla jakiego wykrywać zieleń</TextBlock>
        <TextBox Name="InputTextBox" Margin="5" Padding="5" PreviewTextInput="NumberValidationTextBox" />
        <WrapPanel HorizontalAlignment="Right" Margin="5">
            <Button IsDefault="True" Name="btnDialogOk" Click="BtnOk_Click" MinWidth="60" Margin="0,0,10,0">OK</Button>
            <Button IsCancel="True" MinWidth="60">Anuluj</Button>
        </WrapPanel>
    </StackPanel>
</Window>
